<style>
  h3 {
    line-height: 50px;
    height: 40px;
    padding-left: 80px;
    font-size: 16px;
    font-weight: normal;
    vertical-align: bottom;
    background-image: url("/images/beer.png");
    background-repeat: no-repeat;  
  }

  div.item {
    margin: 1px;
    padding: 0;
  }

  label.title {
    margin: 2px 2px 1px 2px;
    width: 150px;
    line-height: 20px;
    height: 20px;
    display: inline-block;
    padding: 2px 2px 2px 8px;
    background-color: #FCF;
    color: #F09;
    font-weight: bold;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
  }

  .rollover_submit_button {
    height: 27px;
    width: 81px;
    text-align: center;
    font-size: 16px;
    padding: 0;
    margin: 0px 5px 0px 10px;
    color: #4d4d4d;
    border: 0px;
    background-color: #ffffff;
    background-image: url("/images/button_blue.png");
    background-position: top left;
    background-repeat: no-repeat;
    text-decoration: none;
    cursor: pointer;
    user-select: none;
    -moz-user-select: none;
    -khtml-user-select: none;
    -webkit-user-select: none;
  }

  .rollover_submit_button:hover {
    background-position: top center;
  }

  .rollover_submit_button:active {
    background-position: top right;
  }
  div.fieldWithErrors {
    display:inline;
  }
  .MainForm input.wrong, .MainForm .fieldWithErrors input {
    border-color: #f00;
    color: #f00;
    background: #ffd5d5;
  }
</style>  
<div style="position:relative; left:0; top:0;">
<h3>アカウントの編集</h3>
<%= error_messages_for :user %>
<% form_tag update_account_user_url(@user), :method => 'put', :class => "MainForm", :multipart => true do %>
  <div class="box">
    <div class="item">
      <%= label_tag 'user_login', 'ユーザー名', :class=>'title' %>
      <%= text_field :user, :login, :size => "28" %><br />
    </div>
    <div class="item">
      <%= label_tag 'user_email', 'メールアドレス', :class=>'title' %>
      <%= text_field :user, :email, :size => "28" %>
    </div>
    <div class="item">
      <%= label_tag 'user_password', 'パスワード', :class=>'title' %>
      <%= password_field :user, :password, :size => "28" %>
    </div>
    <div class="item">
      <%= label_tag 'user_password_confirmation', 'パスワードの確認', :class=>'title' %>
      <%= password_field :user, :password_confirmation, :size => "28" %>
    </div>
  </div>
  <div style=" margin-top:15px; padding-left:280px; white-space:nowrap">
    <%= submit_tag "保存", :class=>'rollover_submit_button' %>
    <span style="width:100px;font-size:11px";><%= link_to "アカウントを無効にする",  deactivate_user_path(@user), :method => :put, :confirm => "本当にアカウントを無効にしてもよろしいですか？"%></span>
  </div>
<% end %>  
